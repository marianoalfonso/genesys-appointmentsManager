<?php

class Persona {
    private $dni;
    private $apellido;
    private $nombre;
    private $db;

    public function __construct(){
        $this->db = Database::connect(); //:: cuando usamos una static function
    }

    public function getDni(){
        return $this->dni;
    }
    public function setDni($dni){
        $this->dni = $dni;
    }
    public function getApellido(){
        return $this->apellido;
    }
    public function setApellido($apellido){
        $this->apellido = $apellido;
    }
    public function getNombre(){
        return $this->nombre;
    }
    public function setNombre(){
        $this->nombre = $nombre;
    }


    //devuelve la totalidad de las personas
    public function getAll(){
        $sql = "select dni,apellido,nombre from personas order by apellido,nombre";
        $personas = $this->db->query($sql);
        return $personas;
    }

}
?>